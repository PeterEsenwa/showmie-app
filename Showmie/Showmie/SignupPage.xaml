<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Showmie.SignupPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Showmie">
    <StackLayout BackgroundColor="White">
        <!--  Place new controls here  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*" />
                    <RowDefinition Height="0.85*" />
                </Grid.RowDefinitions>
                <Label x:Name="startTxt"
                       Grid.Row="1"
                       Text="Get Started!"
                       FontFamily="{StaticResource Quicksand_Medium}"
                       FontSize="{StaticResource fontSizeLarge}"
                       HorizontalOptions="CenterAndExpand"
                       TextColor="{StaticResource textColorLightBlack}" />
            </Grid>
            <Grid>
                <!--<Button x:Name="fb_signup" Image="fb_icon.png" />-->
            </Grid>
        </Grid>
    </StackLayout>

</ContentPage>
